<form method="post" action="/album/<%=@album.id%>">
  <label for="name">Album Name:</label>
  <input
  type="text"
  name="title"
  id="name"
  value = "<%= @album.title %>"
  />

  <label for="artist-id">Artist:</label>
  <select name="artist_id">
    <% for artist in @artists %>
      <option value="<%=artist.id%>"> <%=artist.name %> </option>
    <%end%>
  </select>


  <label for="genre">Genre:</label>
  <select name="genre">
    <option value="Techno"> Techno </option>
    <option value="Tech-house"> Tech-house </option>
    <option value="Melodic"> Melodic Techno </option>
    <option value="House"> House </option>
    <option value="Acid"> Acid </option>
  </select>

  <label for="quantity">Quantity:</label>
    <input type="number" name="quantity" id="quantity" value = "<%= @album.quantity %>"/>

    <label for="buy_price"> Buy Price:</label>
    <input type="number" name="buy_price" id="buy_price" value = "<%= @album.buy_price %>"/>

    <label for="sell_price"> Sell Price:</label>
    <input type="number" name="sell_price" id="sell_price" value = "<%= @album.sell_price %>"/>



    <input type = "submit" value = "Update Album!">
</form>
